@model IEnumerable<AnResh.Models.Department>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Departments</h2>
<p>@Html.ActionLink("Create new", "Create")</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DepartmentName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DepartmentName)
        </td>
        <td>
            @Html.ActionLink("Details", "Index", "Employees", new { id = item.DepartmentId, departmentName = item.DepartmentName }, null) |
        </td>
    </tr>
}

</table>
